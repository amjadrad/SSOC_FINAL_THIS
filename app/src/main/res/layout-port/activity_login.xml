<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/layout_sign_in_draw">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp">


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />

                <ir.amjadrad.ssoc.helper.MaterialTextField
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:mtf_hasFocus="true"
                    app:mtf_image="@drawable/ic_account_box_black_24dp">

                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/username"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="#333"
                        android:textColorHint="#666"
                        android:textSize="15sp" />

                </ir.amjadrad.ssoc.helper.MaterialTextField>

                <ir.amjadrad.ssoc.helper.MaterialTextField
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:mtf_hasFocus="true"
                    app:mtf_image="@drawable/ic_vpn_key_black_24dp">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="#333"
                        android:textColorHint="#666"
                        android:textSize="15sp" />

                </ir.amjadrad.ssoc.helper.MaterialTextField>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button_style_signin_sign_in"
                    android:gravity="center"
                    android:text="@string/login_btn"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</LinearLayout>